#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=0

#override_dh_build:
#	cp -r ./etc ./debian/boo

%:
	dh $@ 

override_dh_install:
	tar zx -C build/python -f build/python/efaLiveSetup-1.0.tar.gz
	cd build/python/efaLiveSetup-1.0/; ./install.sh --prefix=../../../debian/efalive/usr; cd ../../../
#	cp -r  ../content/* ./debian/efalive/

override_dh_auto_build:
	docbook-to-man debian/efalive-backup.sgml > debian/efalive-backup.1
	docbook-to-man debian/efalive-restore.sgml > debian/efalive-restore.1
	docbook-to-man debian/efalive-setup.sgml > debian/efalive-setup.1
	cd src/python; python setup.py sdist --dist-dir ../../build/python; cd ../../
	dh_auto_build
